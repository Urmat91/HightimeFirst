<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="15dp"
    tools:context=".Activity.MainActivity">

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:onClick="onAboutUs"
        android:text="О нас"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:textColor="@color/colorText"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:onClick="onStudent"
        android:text="Студентам"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:textColor="@color/colorText"/>

    <ImageView
        android:onClick="onInstruction"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:src="@drawable/pic1"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="-7dp"
        android:onClick="onOurTeam"
        android:text="Наша команда"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:textColor="@color/colorText"/>

    <TextView
        android:onClick="onOurBranches"
        android:text="Наши филиалы"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:textColor="@color/colorText"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:onClick="onNews"
        android:text="Новости"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:textColor="@color/colorText"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:onClick="onContacts"
        android:text="Контакты"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:textColor="@color/colorText"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:onClick="onPersonalArea"
        android:text="Личный кабинет"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:textColor="@color/colorText"
        android:layout_marginBottom="30dp"
        android:layout_marginVertical="5dp"/>

    <Button
        android:onClick="onToComeIn"
        android:text="Войти"
        android:paddingHorizontal="43dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="@color/colorText2"
        android:background="@drawable/radius"
        android:layout_marginVertical="20dp"/>

    <Button
        android:onClick="onCheckIn"
        android:text="Регистрация"
        android:paddingHorizontal="13dp"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="@color/colorText2"
        android:background="@drawable/radius"/>
</LinearLayout>