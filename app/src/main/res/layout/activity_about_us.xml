<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="15dp"
    tools:context=".Activity.AboutUsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:onClick="onBack"
                    android:src="@drawable/ic_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="13dp"/>

                <ImageView
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/about_us_1"
                    android:layout_width="180dp"
                    android:layout_height="50dp"/>
            </RelativeLayout>

            <TextView
                android:layout_marginVertical="20dp"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/colorStudent"/>

            <ImageView
                android:src="@drawable/about_us_2"
                android:layout_width="200dp"
                android:layout_height="500dp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/about_us_3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_marginVertical="20dp"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/colorStudent"/>

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/about_us_4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_marginVertical="20dp"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/colorStudent"/>

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/about_us_5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_marginVertical="20dp"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/colorStudent"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>